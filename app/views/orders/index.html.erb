<%= render "shared/header" %>

<h1 class='transaction-title-text'>
      購入内容の確認
    </h1>
    <%# 購入内容の表示 %>
    <div class='buy-item-info'>
      <%= image_tag @product.image, class: 'buy-item-img' %>
      <div class='buy-item-right-content'>
        <h2 class='buy-item-text'>
          <%= @product.title %>
        </h2>
        <div class='buy-item-price'>
          <p class='item-price-text'>¥<%= @product.price %></p>
        </div>
      </div>
    </div>
    <%# /購入内容の表示 %>
<%= form_with(model: @order, url: product_orders_path, id: 'charge-form', class: 'transaction-form-wrap', local: true) do |f| %>
<%= render 'shared/error_messages', model: f.object %>
<%# カード情報の入力 %>
<% if user_signed_in? && current_user.card.present? %>
  <div class="Card_info">
    【カード番号】
    <br>
    <%= "**** **** **** " + @card[:last4] %>
    <br>
    【有効期限】
    <br>
      <%= @card[:exp_month] %>
    /
      <%= @card[:exp_year] %>
  </div>
<% else%>
  <div class='credit-card-form'>
    <h1 class='info-input-haedline'>
      クレジットカード情報入力
    </h1>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">カード情報</label>
      </div>
      <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">有効期限</label>
      </div>
      <div class='input-expiration-date-wrap'>
        <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
        <p>月</p>
        <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
        <p>年</p>
      </div>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">セキュリティコード</label>
      </div>
      <%= f.text_field :cvc,class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
    </div>
  </div>
<% end %>
<%# /カード情報の入力 %>

<%# 配送先の入力 %>
<div class='shipping-address-form'>
  <h1 class='info-input-haedline'>
    配送先入力
  </h1>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号</label>
    </div>
    <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678"%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.text_field :email, class:"input-default", id:"phone-number", placeholder:"例）abc@aaa.com" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">郵便番号</label>
    </div>
    <%= f.text_field :post_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567"%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">都道府県</label>
    </div>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"prefecture"}) %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">市区町村</label>
    </div>
    <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">番地</label>
    </div>
    <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">建物名</label>
    </div>
    <%= f.text_field :building_name, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
  </div>
</div>
<%# /配送先の入力 %>
<div class='buy-btn'>
  <%= f.submit "購入" ,class:"buy-red-btn" %>
</div>
<% end %>